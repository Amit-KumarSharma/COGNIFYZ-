public class NumberPattern {
    public static void main(String[] args) {
        // Select a number pattern type (e.g., pyramid)
        int numRows = 5; // Number of rows in the pyramid

        // Develop a program to generate the selected pattern
        for (int i = 1; i <= numRows; i++) {
            // Print leading spaces
            for (int j = 1; j <= numRows - i; j++) {
                System.out.print(" ");
            }

            // Print numbers
            for (int j = 1; j <= i; j++) {
                System.out.print(j + " ");
            }

            // Print trailing numbers (if any)
            for (int j = i - 1; j >= 1; j--) {
                System.out.print(j + " ");
            }

            // Move to the next line
            System.out.println();
        }
    }
}
